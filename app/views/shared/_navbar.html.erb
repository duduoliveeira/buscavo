<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <div class="container-fluid">

    <% if admin_signed_in? %>
      <%= link_to admins_path, class: "navbar-brand" do %>
        <%= image_tag "buscavo.png" %>
      <% end %>
    <% elsif driver_signed_in? %>
      <%= link_to drivers_path, class: "navbar-brand" do %>
        <%= image_tag "buscavo.png" %>
      <% end %>
    <% else %>
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "buscavo.png" %>
      <% end %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">

        <% if admin_signed_in? %>
          <%= render "shared/navbar_admin" %>
        <% elsif driver_signed_in? %>
          <%= render "shared/navbar_driver" %>
        <% else %>
          <li class="nav-item text-white ">
           <h6>Sign-up: </h6>
          </li>
          <li class="nav-item ">
            <%= link_to "Driver", new_driver_registration_path, class: "btn btn-sm btn-primary" %>
          </li>
          <li class="nav-item ">
            <%= link_to "Admin", new_admin_registration_path, class: "btn btn-sm btn-primary" %>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
