<div class="driver">
  <div class="container p-3">

    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="m-3">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">User Profile</li>
          </ol>
        </nav>
      </div>
    </div>

    <div class=" container row">

      <div class="col-lg-4">
        <div class="card">
          <div class="card-body text-center">
            <% if @admin.photo.attached? %>
              <%= cl_image_tag @admin.photo.key, height: 150, width: 150, radius: :max,  crop: :fill, gravity: :face %>
            <% else %>
              <%= image_tag 'default.png', height: 150, width: 150, radius: :max,  crop: :fill %>
            <% end %>
            <h5 class="m-2"><%= "#{@admin.first_name} #{@admin.last_name}" %></h5>
            <p class="text-muted m-2">Administrator</p>
            <div class="d-flex justify-content-center mt-4 mb-4">
              <%= link_to 'Edit profile', edit_admin_registration_path, class: 'btn btn-outline-primary m-2' %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-8">

        <div class="card mb-2">
          <div class="card-body">

            <div class="row">
              <h6 class="card-text"><strong>E-mail:</strong> <%= @admin.email %></h6>
            </div>
            <hr>
            <div class="row">
              <h6 class="card-text"><strong>Phone:</strong> <%= @admin.phone_number %></h6>
            </div>

          </div>
        </div>

        <div class="row">
          <div class="col-md-4">

            <% if @admin.credit_card_number.nil? || @admin.credit_card_number.empty?  %>
              <div class="card">
                <div class="card text-center" style="width: 100%;">
                  <div class="card-body">
                    <h4 class="card-title">Payments</h4>
                    <p class="card-text"></p>
                    <%= link_to '+ Add New Credit Card', payments_path, class: 'btn btn-sm btn-primary' %>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="card">
                <div class="card text-center" style="width: 100%;">
                  <div class="card-body">
                    <h4 class="card-title mb-3">Payments</h4>
                    <h6 class="card-text">Name: <%= @admin.credit_card_name  %></h6>
                    <h6 class="card-text">Final number: <%= @admin.credit_card_number.last(4) %></h6>
                    <div class="d-flex justify-content-center mt-5 mb-4">
                      <%= link_to 'Edit your payment', payments_path, class: 'btn btn-outline-primary' %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <div class="col-md-8">

            <% if @admin.user.nil? %>
              <div class="card">
                <div class="card text-center" style="width: 100%;">
                  <div class="card-body">
                    <h4 class="card-title">User</h4>
                    <p class="card-text"></p>
                    <%= link_to '+ Add New User', new_users_path, class: 'btn btn-sm btn-primary' %>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="card">
                <div class="card text-center" style="width: 100%;">
                  <div class="card-body">
                    <h4 class="card-title mb-3">User</h4>
                    <h6 class="card-text">Name: <%= "#{@admin.user.first_name} #{@admin.user.last_name}" %></h6>
                    <h6 class="card-text">Phone: <%= @admin.user.phone_number %></h6>
                    <div class="d-flex justify-content-center" data-controller="clipboard" data-clipboard-feedback-text-value="Copied!">
                      <input data-clipboard-target="input" type="text" value="http://localhost:3000/home?refeer=<%=@admin.id%>" readonly>
                      <button class="btn btn-sm btn-outline-primary m-1" data-action="click->clipboard#copy"><i class="fa-regular fa-copy"></i></button>
                    </div>
                    <div class="d-flex justify-content-center mt-2 mb-3">
                      <%= link_to 'Edit user', edit_user_path(@admin.user), class: 'btn btn-outline-primary' %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
