<div class="container mt-2">
<h3>Rate your Ride</h3>
  <%= simple_form_for @review, url: ride_posts_path(@ride), method: :post do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :stars, placeholder: "Rating 1-5" %>
      <%= f.input :content %>
      <%= f.text_field :ride, value: @ride.id, disabled:true, hidden:true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create Review", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
